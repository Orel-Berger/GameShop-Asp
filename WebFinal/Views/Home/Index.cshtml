@model IEnumerable<WebFinal.Models.Game>
<head>
    <link rel="stylesheet" href="~/css/HomeSite.css">
</head>
   
    <section class="hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center order-1 order-md-2">
                    <h1>Welcome to Game Shop</h1>
                    <p>Get the best deals on the latest video games and consoles.</p>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary btn-lg">Shop Now</a>
                </div>
                <div class="col-md-6 order-2 order-md-1">
                    <img src="/images/Shop/logo.png" style="height:400px;width:600px;" class="img-fluid" alt="Game Shop">
                </div>
            </div>
        </div>
    </section>
    <!-- Product section -->
    <section class="products pt-3">
        <div class="container">
            <div class="row">
                @foreach (var game in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="@game.ImageUrl" class="card-img-top" style="height:300px;width:400px;" alt="@game.Title">
                            <div class="card-body">
                                <h5 class="card-title">@game.Title</h5>
                                <div class="pl-1">
                                    <p>List Price:<b><strike>$@game.Price.ToString("0.00")</strike></b></p>
                                </div>
                                <p class="card-text">@game.Description</p>
                                <a asp-controller="Customer" asp-action="Details" class="btn btn-primary" asp-route-id="@game.Id">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <div class="about pt-3 pb-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="/images/Shop/logo2.png" style="border-radius:15px;border:2px solid #bbb9b9" alt="Gaming Image">
                </div>
                <div class="col-md-6">
                    <h2>About Us</h2>
                    <p>Game Shop is a one-stop destination for gamers. With a wide range of games and gaming accessories, we offer something for everyone. Our aim is to provide an unparalleled gaming experience to all our customers.</p>
                </div>
            </div>
        </div>

    </div>
    <!-- Contact section -->
    <section class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Contact Us</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                 
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message:</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                    <button onclick=" VerifyCon()" class="btn btn-primary">Send Message</button>
   
                </div>
                <div class="col-md-6">
                    <h4>Address</h4>
                    <p>123 Main St, Anytown, USA</p>
                    <h4>Phone</h4>
                    <p>(123) 456-7890</p>
                    <h4>Email</h4>
                    <p>contact@gameshop.com</p>
                </div>
            </div>
        </div>
    </section>
 <script type="text/javascript">
    function VerifyCon() {
            Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Your work has been saved',
            showConfirmButton: false,
            timer: 1500
        })
    }
 </script>