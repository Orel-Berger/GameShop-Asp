@model WebFinal.Models.Comment

<table class="table table-bordered table-striped border-opacity-100 border-dark" style="border:2px dashed black; border-radius:5px;width:100%">
    <tbody>
        <tr>        
            <td width="50%">
                <h3><b>Description: </b>
                    <br />@Model.Description</h3>
            </td>
            <td width="30%">
                <h3 class="align-text-bottom text-lg-center">@Model.PublishDate.ToString("dd-MMM-yyyy")</h3>
            </td>
            <td width="20%">
                @for (int i = 0; i < @Model.Rating; i++)
                    {
                    <span class="starGlow"></span>
                    }
                    @for (int i = @Model.Rating; i < 5; i++)
                    {
                    <span class="starFade"></span>
                    }
            </td>
        </tr>
    </tbody>
</table>
