@model IEnumerable<WebFinal.Models.Comment>
@{
    ViewData["Title"] = "Comment";
}
@using (Html.BeginForm(actionName: "AddComment", controllerName: "Customer", FormMethod.Post, htmlAttributes: new { onsubmit = "return VerifyRating()" }))
{
    <div class="card container pt-4" style="border:2px dashed black; border-radius:5px">
        <div class="card-header bg-dark ml-0 row text-center">
            <h1 class="text-light align-content-md-center" style="font-size:40px;"> <b>@ViewBag.GameName</b></h1>
        </div>
        <div class="card-body row container ">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2 text-center">
                            <h2 class="pb-2 align-content-center" style="font-size:30px;"><b>Add Comment</b></h2>
                        </div>
                        <div class="row pl-2 bg-info">
                            <textarea class="commentBox" rows="6" cols="50" name="articleComment" id="txtArticleComment"></textarea>
                            <div class="text-center" onmouseout="CRateSelected()">
                                <span>
                                    <span class="starFade" id="span1" onclick="CRateCilck(1)" onmouseover="CRateOver(1)" onmouseout="CRateOut(1)"></span>
                                    <span class="starFade" id="span2" onclick="CRateCilck(2)" onmouseover="CRateOver(2)" onmouseout="CRateOut(2)"></span>
                                    <span class="starFade" id="span3" onclick="CRateCilck(3)" onmouseover="CRateOver(3)" onmouseout="CRateOut(3)"></span>
                                    <span class="starFade" id="span4" onclick="CRateCilck(4)" onmouseover="CRateOver(4)" onmouseout="CRateOut(4)"></span>
                                    <span class="starFade" id="span5" onclick="CRateCilck(5)" onmouseover="CRateOver(5)" onmouseout="CRateOut(5)"></span>
                                </span>
                            </div>
                        </div>
                        <div hidden>
                            <input id="lblRating" value="0" name="rating"  />
                            <input id="lblRating" value="@ViewBag.Gameid" name="articleId"  />
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1  text-center">
                        <img src="\@ViewBag.GameImage" width="100%" style="height:370px;border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                </div>
            </div>
        </div>
          <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:60px;" asp-action="Index">
                        <i class="bi bi-house-door"></i>Back to Home
                    </a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <input type="submit" class="btn btn-primary form-control" style="height:60px;" name="SaveComment" value="Save Comment" />             
                </div>
            </div>
        </div>    
    </div>
}
<hr />
<h1 class="text-center text-decoration-underline">All Comment About @ViewBag.GameName </h1>
<h3 class="text-Left">Number Of Comments: @ViewBag.Comment </h3>
<div  class="pb-5 ">


<div class="card container text-bg-light " style="overflow-y:scroll; height:400px;">
@foreach (var item in Model)
{
    @Html.Partial("_CommentPartial",item)
}
</div>
</div>
