@model ShoppingCart


<form method="post">
   <input hidden asp-for="Game.Id" />
    <div class="card container pt-4">
        <div class="card-header bg-primary ml-0 row ">
            <div class="col-12 col-md-6">
                <h1 class="text-black-50 align-content-md-center" style="font-size:40px;"> <b>@Model.Game.Id</b></h1>
                <h2  class="text-dark">by @Model.Game.Publisher</h2>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <h1 class="badge bg-light pt-2" style="font-size:25px;"><b>@Model.Game.Category.Name</b></h1>
            </div>
        </div>
        <div class="card-body row container ">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h2 class="pb-2 text-opacity-50 align-content-center" style="font-size:30px;">Name: <b>@Model.Game.Title</b></h2>
                        </div>
                        <div class="row pl-2">
                            <h4>Date Publish: <b>@Model.Game.PublishDate.ToString("yyyy MMMM")</b></h4>
                        </div>
                        <div class="row text-center pl-2" style="color:navy; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Game.Price.ToString("c")</div>
                            </div>
                        </div>
                        <hr /><br />
                        <div class="row pl-2">
                            <h3 class="text-bg-dark" style="color:beige;font-weight:bold">@Model.Game.Description</h3>
                        </div>      
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img class="zoom" src="\@Model.Game.ImageUrl" width="100%" style="height:370px;width:250px;" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:60px;" asp-action="Index">
                        <i class="bi bi-house-door"></i>Back to Home
                    </a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <a asp-controller="Customer" asp-action="showComment" asp-route-id="@Model.Game.Id" style="height:60px;" class="btn btn-primary form-control">
                        <i class="bi bi-info-square"></i> &nbsp; All Comment
                    </a>
               
                </div>
            </div>
        </div>
    </div>
</form>